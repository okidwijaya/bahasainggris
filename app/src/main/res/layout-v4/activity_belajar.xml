<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BelajarActivity"
    android:layout_margin="2dp"
    android:background="@drawable/bg1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp">
            <ImageButton
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:id="@+id/button_tubuh"
                android:background="@drawable/menu_tubuh"
                android:contentDescription="@string/menutubuh" />
            <ImageButton
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:id="@+id/button_buahdansayur"
                android:background="@drawable/menu_buahdansayur"
                android:contentDescription="@string/menubuahdansayur" />
            <ImageButton
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:id="@+id/button_binatang"
                android:background="@drawable/menu_binatang"
                android:contentDescription="@string/menubinatang" />
            <ImageButton
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:id="@+id/button_ruangkelas"
                android:background="@drawable/menu_ruangkelas"
                android:contentDescription="@string/menuruangkelas" />
            <ImageButton
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:id="@+id/button_keluarga"
                android:background="@drawable/menu_keluarga"
                android:contentDescription="@string/menukeluarga" />
        </LinearLayout>

    <ImageButton
        android:id="@+id/buttonHelp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/help"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/help1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/back"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/back1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

</RelativeLayout>